
	<table width="100%" border="0" cellpadding="0" cellspacing="0">
	<tr>
		<td align="center">
		<table width="960" cellpadding="0" cellspacing="0" >
		<tr>
			<td width="360">&nbsp;<p /><p /></td>
			<td width="355">&nbsp;<p /><p /></td>
			<td width="245" align="right">
				<div style="margin-top:10px; margin-bottom:10px">
					<%= render 'shared/search' %>
				</div>
			</td>
		</tr>
		</table>			
		</td>
	</tr>

	<tr align="center">
		<td>
			<table width="960" height="900" border="0" cellpadding="0" cellspacing="0" bgcolor="#FFFFFF">
			<tr >
			<td height="50px">
				<div id="breadcrumbs" >
					/ <span class="breadcrumb" >gallery</span>
				</div>
				<div class="return-category" >
						<a href="/gallery/<%= @listing[:artist_slug] %>" style="color:blue" ><%= @listing[:artist] %></a> :: <%= @listing[:title].downcase %>

						<% unless @listing[:available] %>
							<span style="color:red" >
								<span style="font-variant:normal; font-weight:normal" >//</span>
								not available
							</span>
						<% end %>
						
				</div>

				<div class="listing-navigation" >
					<a href="/gallery/contemporary-art">fine art</a> |
					<a href="/gallery/design" >design</a>   |
					<a href="/about" >about</a>   |
					<a href="/contact">contact</a>
				</div>				
			</td>
			</tr>
			<tr>
			<td align="center" valign="top">
					<table width="100%" >

						<tr><td align="left" valign="top">
							<img src="<%= @listing[:image] %>" /> <br />
							<div style='margin:10px'>
								<b><%= raw(description_for( @listing )) %></b>					
							</div>
						</td><td align="right" valign="top">
							<div style="margin-left:13px" >
							<% @listings.each do | listing | %>

								<div 
									<% unless listing[:available] %>
										class="not-available"
									<% end %>
									style="float:left; margin-right:5px;" 
								>
									<a 
										href="/listing/<%= slugify listing[:artist] %>/<%= slugify listing[:title]%>"
									>
										<img 
											src="<%= listing[:thumb] %>" 
											width="100px" 
											height="100px"
											class="portfolio-image <% if slugify( listing[:title] ) == @slug %> highlighted <% end %>"
											
																					
										/>
									</a>
								</div>
							<% end %>
							</div>
						</td></tr>
					</table>
			</td>
			</tr>

			<tr>
			<td align="left">

			</td>
			</tr>
			</table>
		</td>
	</tr>
	</table>